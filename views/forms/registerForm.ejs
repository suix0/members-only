<form
  action="/register"
  method="post"
  class="flex flex-col border p-6 rounded-lg gap-4 bg-gray-700"
>
  <label for="firstname">
    <input
      type="text"
      id="firstname"
      name="firstname"
      placeholder="First name"
      class="border p-2 bg-neutral-300 text-gray-900 rounded-lg w-full"
      required
    />
  </label>
  <label for="lastname">
    <input
      type="text"
      id="lastname"
      name="lastname"
      placeholder="Last name"
      class="border p-2 bg-neutral-300 text-gray-900 rounded-lg w-full"
      required
    />
  </label>
  <label for="username">
    <input
      type="text"
      id="username"
      name="username"
      placeholder="Username"
      class="border p-2 bg-neutral-300 text-gray-900 rounded-lg w-full"
      required
    />
  </label>
  <label for="password">
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Password"
      class="border p-2 bg-neutral-300 text-gray-900 rounded-lg w-full"
      required
    />
  </label>
  <label for="confirmPassword">
    <input
      type="password"
      id="confirmPassword"
      name="confirmPassword"
      placeholder="Confirm password"
      class="border p-2 bg-neutral-300 text-gray-900 rounded-lg w-full"
      required
    />
  </label>
  <button type="submit" class="cursor-pointer bg-blue-500 p-2 rounded-lg">Sign up!</button>
  <%- include('../errors/error') %>
</form>
